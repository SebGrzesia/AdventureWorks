@model List<AdventureWorks.ViewModel.ProductViewModel>

@{
    ViewData["Title"] = "Product List";
}

<h3>@ViewData["Title"]</h3>
<hr />
<form>
    <table class="table table-hover">
        <thead>
            <tr class="table-active">
                <th>ProductId</th>
                <th>Name</th>
                <th>MakeFlag</th>
                <th>Color</th>
                <th>StandardCost</th>
                <th>PriceDifference</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                @foreach (var product in Model)
                {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.Name</td>
                    <td>@product.MakeFlag</td>
                    <td>@product.Color</td>
                    <td>@product.StandardCost</td>
                    <td>@product.PriceDifference</td>
                </tr>
                }
            }
        </tbody>
    </table>
</form>